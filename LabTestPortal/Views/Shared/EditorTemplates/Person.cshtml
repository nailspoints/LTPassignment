@model LabTestPortal.Models.Person
@using LabTestPortal.CustomClass

@Html.HiddenFor(model => model.person_id, new { htmlAttributes = new { id = "person_id" } })
@Html.HiddenFor(model => model.target_id, new { htmlAttributes = new { id = "target_id" } })

<div class="row" style="padding-left:30px">
    <div class="form-group row">
        @Html.LabelFor(model => model.first_name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.first_name, new { htmlAttributes = new { id = "first_name", @class = "form-control", @required = "required" } })
            @Html.ValidationMessageFor(model => model.first_name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.last_name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.last_name, new { htmlAttributes = new { id = "last_name", @class = "form-control", @required = "required" } })
            @Html.ValidationMessageFor(model => model.last_name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.state_id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.DropDownListFor(model => model.state_id, new SelectList(CommonHelper.StateList, "state_id", "state_code"), new { id = "state_id", @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(model => model.state_id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.gender, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.DropDownListFor(model => model.gender, new SelectList(
                        new List<Object>
                        {
                            new { value = "", text = "" },
                            new { value = "F", text = "F" },
                            new { value = "M", text = "M" }
                        }, "value", "text")
                        ,new { id = "gender", @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(model => model.gender, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.dob, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.dob, new { htmlAttributes = new { id = "dob", @class = "form-control", @required = "required", @placeholder = "MM/dd/yyyy" } })
            @Html.ValidationMessageFor(model => model.dob, "", new { @class = "text-danger" })
        </div>

    </div>
</div>


